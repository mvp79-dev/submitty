<div class="content">
    <h1>Plagiarism Detection -- WORK IN PROGRESS</h1><br>
    <div class="nav-buttons">
        <a class="btn btn-primary"
           href="{{ new_plagiarism_config_link }}"
        ><i class="fas fa-plus"></i><span style="margin-left:0.5em;"></span>Configure New Gradeable for Plagiarism Detection</a>
    </div>
    {% if plagiarism_results_info|length > 0 %}
        <div class="plag-table-cont">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Gradeable</th>
                        <th></th>
                        <th>Last Run</th>
                        <th>Submissions</th>
                        <th>Students Matched</th>
                        <th>Nightly<br/>Re-run</th>
                        <th>Run Log</th>
                    </tr>
                </thead>
                <tbody>
                    {% for row in plagiarism_results_info %}
                        {{ _self.renderPlagiarismRow(row) }}
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="plag-table-no-cont">No gradeables configured to display...</div>
    {% endif %}
</div>
<script>
    checkRefreshLichenMainPage("{{ refreshLichenMainPageLink }}");
</script>

{# refresh page ensures atleast one refresh of lichen mainpage when delete, rerun, edit or new configuration is saved #}
{% if refresh_page == "REFRESH_ME" %}
    <script>
        localStorage.setItem("last_data", "REFRESH_ME");
    </script>
{% endif %}

{% include('plagiarism/DeletePlagiarismResultsAndConfig.twig') %}

{% macro renderPlagiarismRow(row) %}
    <tr id="{{ row['id'] }}_table_row">
        <td>
            {% if row['ranking_available'] %}
                <a href="{{ row['gradeable_link'] }}">{{ row['title'] }}</a>
            {% else %}
                {{ row['title'] }}
            {% endif %}
            <br/>
            Due: {{ row['duedate'] }}
        </td>
        {% if row['in_queue'] %}
            <td colspan=4>
                {% if row['processing'] %}
                    <i>Running</i>
                {% else %}
                    <i>In queue</i>
                {% endif %}
            </td>
        {% else %}
            <td>
                <span class="plag-action-btn-cont">
                    <a href="{{ row['edit_plagiarism_link'] }}"
                       aria-label="Edit {{ row['title'] }}">
                        <i class="fas fa-pencil-alt"></i>
                    </a>
                    <a href="{{ row['rerun_plagiarism_link'] }}"
                       aria-label="Rerun {{ row['title'] }}"
                    >
                        <i class="fas fa-sync"></i>
                    </a>
                    <a aria-label="Delete {{ row['title'] }}"
                       onclick="deletePlagiarismResultAndConfigForm('{{ row['delete_form_action'] }}', '{{ row['title'] }}');"
                    >
                        <i class="fas fa-trash"></i>
                    </a>
                </span>
            </td>
            <td>
                {{ row['timestamp'] }}
            </td>
            <td>
                {{ row['students'] }} students, {{ row['submissions'] }} submissions
            </td>
            <td>
                {{ row['matches_and_topmatch'] }}
            </td>
        {% endif %}
        <td>
            <input type="checkbox"
                   onclick='window.location.href = {{ row['nightly_rerun_link'] }};'
                   {{ row['nightly_rerun_status'] }}>
        </td>
        <td>
            <button class="btn btn-primary" onclick="viewRunLog('{{ row['id'] }}')">View Log</button>
        </td>
    </tr>
{% endmacro %}

<script>
    // This is a hacky way to ensure that the run log is set to the width of the original table.
    //  Otherwise, the run log row will expand to contain the text within and make the table bigger because there isn't a fixed width on the table.
    let originalTableWidth;
    $(document).ready(function() {
        originalTableWidth = $(".plag-table-cont").width();
    });

    function viewRunLog(gradeable_id) {
        if ($("#" + gradeable_id + "_table_row").next().hasClass("run-log-results")) {
            $("#" + gradeable_id + "_table_row").next().remove();
        }
        else {
            const url = buildCourseUrl(['plagiarism', 'gradeable', gradeable_id, 'log']) + `?gradeable_id=${gradeable_id}`;
            $.get(url, function (data) {
                $(`<tr class="run-log-results">
                <td colspan="7" class="run-log-data">
                    <pre style="width:` + originalTableWidth + `px">` + data + `</pre>
                </td>
            </tr>`).insertAfter("#" + gradeable_id + "_table_row");
            });
        }
    }
</script>
